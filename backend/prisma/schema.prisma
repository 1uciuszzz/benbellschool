generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String @unique
}

model Room {
  id     String  @id @default(uuid())
  name   String
  active Boolean @default(true)

  createdAt DateTime @default(now())
}

model RoomUser {
  userId String
  roomId String

  @@id([userId, roomId])
}

model Expenditure {
  id       String   @id @default(uuid())
  payerId  String
  payeeId  String
  amount   Float
  roomId   String
  createAt DateTime @default(now())
}
